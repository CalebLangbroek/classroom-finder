<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/mapFragment">

    <fragment
            android:id="@+id/mapFragment"
            android:name="com.ninjatech.classroomfinder.MapFragment"
            android:label="fragment_map"
            tools:layout="@layout/fragment_map" >
        <action
                android:id="@+id/action_mapFragment_to_searchFragment"
                app:destination="@id/searchFragment" />
        <action
                android:id="@+id/action_mapFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
    </fragment>
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.ninjatech.classroomfinder.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" >
        <action
                android:id="@+id/action_profileFragment_to_mapFragment2"
                app:destination="@id/mapFragment" />
    </fragment>
    <fragment
            android:id="@+id/searchFragment"
            android:name="com.ninjatech.classroomfinder.SearchFragment"
            android:label="fragment_search"
            tools:layout="@layout/fragment_search" >
        <action
                android:id="@+id/action_searchFragment_to_mapFragment"
                app:destination="@id/mapFragment" />
    </fragment>
</navigation>